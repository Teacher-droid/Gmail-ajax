if( <%=@email.read == false %>){
	document.getElementById("<%=@email.id%>").setAttribute("class","card mb-3 border-warning");
	document.getElementById("read").textContent = "Marquer comme lu";
}
else{
	document.getElementById("<%=@email.id%>").setAttribute("class","card mb-3 border-success");
	document.getElementById("read").textContent = "Marquer comme non-lu";	
}